<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 500" width="800" height="500">
  <!-- Hero farmer with technology image (SVG replacement for JPG) -->
  <rect width="800" height="500" fill="#e8f5e9"/>
  
  <!-- Background elements -->
  <rect x="0" y="350" width="800" height="150" fill="#81c784" opacity="0.3"/>
  <circle cx="700" cy="100" r="60" fill="#4caf50" opacity="0.2"/>
  <circle cx="100" cy="150" r="40" fill="#4caf50" opacity="0.2"/>
  
  <!-- Farmer figure -->
  <g transform="translate(300, 250)">
    <!-- Body -->
    <rect x="-40" y="-50" width="80" height="150" rx="10" ry="10" fill="#4caf50"/>
    
    <!-- Head -->
    <circle cx="0" cy="-80" r="30" fill="#8d6e63"/>
    
    <!-- Hat -->
    <path d="M-30 -95 Q0 -115 30 -95" fill="#5d4037" stroke="#3e2723" stroke-width="2"/>
    
    <!-- Arms -->
    <rect x="-80" y="-30" width="40" height="15" rx="5" ry="5" fill="#4caf50"/>
    <rect x="40" y="-30" width="40" height="15" rx="5" ry="5" fill="#4caf50"/>
    
    <!-- Legs -->
    <rect x="-30" y="100" width="20" height="50" fill="#5d4037"/>
    <rect x="10" y="100" width="20" height="50" fill="#5d4037"/>
  </g>
  
  <!-- Tablet/Device -->
  <g transform="translate(450, 230)">
    <rect x="-40" y="-60" width="80" height="120" rx="5" ry="5" fill="#e0e0e0" stroke="#9e9e9e" stroke-width="2"/>
    <rect x="-35" y="-55" width="70" height="100" rx="2" ry="2" fill="#ffffff"/>
    
    <!-- Screen content -->
    <rect x="-30" y="-50" width="60" height="10" rx="2" ry="2" fill="#4caf50"/>
    <rect x="-30" y="-35" width="60" height="5" rx="1" ry="1" fill="#e0e0e0"/>
    <rect x="-30" y="-25" width="60" height="5" rx="1" ry="1" fill="#e0e0e0"/>
    <rect x="-30" y="-15" width="60" height="5" rx="1" ry="1" fill="#e0e0e0"/>
    
    <!-- Graph -->
    <rect x="-30" y="0" width="60" height="35" rx="2" ry="2" fill="#f5f5f5"/>
    <polyline points="-25,25 -15,15 -5,20 5,10 15,5 25,15" fill="none" stroke="#4caf50" stroke-width="2"/>
  </g>
  
  <!-- Field/Farm visualization -->
  <g transform="translate(150, 300)">
    <!-- Field plots -->
    <rect x="-100" y="-50" width="60" height="100" fill="#c8e6c9" stroke="#81c784" stroke-width="1"/>
    <rect x="-30" y="-50" width="60" height="100" fill="#a5d6a7" stroke="#81c784" stroke-width="1"/>
    
    <!-- Plants/crops -->
    <g transform="translate(-70, 0)">
      <path d="M-10 0 Q-15 -20 -5 -30 Q0 -35 5 -25 Q10 -15 5 0" fill="#2e7d32"/>
      <line x1="0" y1="-25" x2="0" y2="0" stroke="#1b5e20" stroke-width="1"/>
    </g>
    
    <g transform="translate(-50, -20)">
      <path d="M-10 0 Q-15 -20 -5 -30 Q0 -35 5 -25 Q10 -15 5 0" fill="#388e3c"/>
      <line x1="0" y1="-25" x2="0" y2="0" stroke="#1b5e20" stroke-width="1"/>
    </g>
    
    <g transform="translate(0, 0)">
      <path d="M-10 0 Q-15 -20 -5 -30 Q0 -35 5 -25 Q10 -15 5 0" fill="#43a047"/>
      <line x1="0" y1="-25" x2="0" y2="0" stroke="#1b5e20" stroke-width="1"/>
    </g>
    
    <g transform="translate(20, -20)">
      <path d="M-10 0 Q-15 -20 -5 -30 Q0 -35 5 -25 Q10 -15 5 0" fill="#66bb6a"/>
      <line x1="0" y1="-25" x2="0" y2="0" stroke="#1b5e20" stroke-width="1"/>
    </g>
  </g>
  
  <!-- Drone -->
  <g transform="translate(600, 150)">
    <rect x="-20" y="-5" width="40" height="10" fill="#424242"/>
    <circle cx="0" cy="0" r="10" fill="#616161"/>
    <rect x="-40" y="-2" width="20" height="4" fill="#424242"/>
    <rect x="20" y="-2" width="20" height="4" fill="#424242"/>
    <rect x="-2" y="-40" width="4" height="20" fill="#424242"/>
    <rect x="-2" y="20" width="4" height="20" fill="#424242"/>
    <circle cx="-40" cy="-2" r="5" fill="#9e9e9e"/>
    <circle cx="40" cy="-2" r="5" fill="#9e9e9e"/>
    <circle cx="0" cy="-40" r="5" fill="#9e9e9e"/>
    <circle cx="0" cy="40" r="5" fill="#9e9e9e"/>
  </g>
  
  <!-- Title -->
  <text x="400" y="450" font-family="Arial" font-size="24" font-weight="bold" text-anchor="middle" fill="#2e7d32">Smart Farming Technology</text>
</svg>